  position: fixed
  height: 60px
  top: 0
  left: 0
  z-index: 20;
  transition: all .4s ease;
  box-shadow: 0px 5px 5px -3px rgba(0, 0, 0, 0.2), 0px 8px 10px 1px rgba(0, 0, 0, 0.14), 0px 3px 14px 2px rgba(0, 0, 0, 0.12);
  img{
    height: 40px
  }
  a{
    img{
      margin: 15px 25px 10px;
      height: 30px;
    }
  }
}

