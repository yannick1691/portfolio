a.button-dark
  border: 2px solid #fafafa
  color: #fafafa
  display: inline-block
  max-width 90%
  padding: 10px 20px;
  width: auto
  &:hover
    background: #fafafa
    color: #212121

.intro
  display: flex
  justify-content: space-between
  flex-wrap: nowrap
  width: 100%

.showcase
  width: 39vw
  min-width: 300px
  margin: 66px 8vw 60px 5vw
  display: inline-block
  position: relative
  margin-bottom: -200px
  @media tablet
    display: none
  @media mobile
    display: none

article
  width: 100%
  overflow: hidden
  height: 100%
  max-width: 100vw
  // margin-top: -100px

.design
  background: linear-gradient(115.57deg, #45A4FA 0%, #2196F3 100%);
  margin: 0 -50px
  transform-origin: left center
  transform: rotate(3deg)
  @media mobile
    display: none
  h2
    color: #FBFBFB
    text-transform: uppercase
    font-weight: 900
    font-size: 33px
    text-align: center

.content
  transform: rotate(-3deg)
  padding-top: 80px
  padding-left: 50px
  padding-bottom: 80px

.fotografie
  display: flex
  flex-direction: column
  flex-wrap: wrap

.previews
  display: flex
  width: 86vw
  margin: 50px 8vw
  justify-content: space-around
  flex-wrap: nowrap
  @media tablet
    width: 95vw
    margin: 50px 2.5vw

.showcaseGif
  box-sizing: border-box
  width: 80%
  object-fit: cover
  object-position: center

.gif
  width: 100%;
  height: 100%;

.mockup
  height: 490px
  width: 300px
  background-color: #FFFFFF
  background-size: cover
  margin: 0px 10px
  box-shadow: 1px 1px 3px 0 rgba(0,0,0,0.25);
  @media laptop
    height: 400px
  @media tablet
    height: 340px

.process
  display: flex
  flex-wrap: nowrap
  margin-bottom: 70px
  margin-top: 200px
  @media mobile
    background-image: url('../links/img/background.svg')
    background-size: cover
    background-position: top left
    margin-bottom: 0
    margin-top: 50px
  h2
    font-weight: bold
    text-transform: uppercase


.processSide
  width: 40vw
  min-width: 250px
  max-width: 500px
  position: relative
  margin-right: 8vw
  margin-top: 50px
  vertical-align: top
  display: inline-block
  @media laptop
    margin-top: -30px
  @media tablet
    margin-top: -30px
    min-width: 325px
  @media smallerDesktop
    margin-top: -40px
  @media mobile
    margin-top: 60px
    box-shadow: 0 0 6px 0 rgba(0,0,0,0.25)
    border-radius: 4px
    background: radial-gradient(circle, #EBEDEE 0%, #FBFBFB 100%)
    padding: 25px
    width: 90vw
    margin: 50px 5vw 50px 5vw
    min-width: 100px
  a
    color: #0069c0
    font-family: 'Open Sans', sans-serif
    font-size: 16px
    line-height: 20px
    display: block
    padding: 5px 15px 5px 0px
    text-decoration: none
    &:after,&:before
      transition: transform 0.3s, opacity 0.2s
      display: inline-block
      opacity: 0
    &:before
      margin-right: 10px
      content: '['
      transform: translateX(20px)
      color: #0039c0
      font-size: 18px
    &:after
      margin-left: 10px
      content: ']'
      transform: translateX(-20px)
      color: #0039c0
      font-size: 18px
    &:hover
      color: #333333
      &:before, &:after
        opacity: 1
        transform: translateX(0px)
    &:focus
      color: #333333
      &:before, &:after
        opacity: 1
        transform: translateX(0px)

.tag
  line-height: 16px
  margin-bottom: 4px

.wireframe
  margin: 0 8vw
  width: 40vw
  flex-shrink: 2
  @media mobile
    display: none
  @media tablet
    width: 90vw
    margin: 0 5vw
  img
    width: 100%
    height: 100%
    object-fit: contain
    object-position: top center

.toTop
  position: fixed;
  bottom: 10px;
  right: 10px;
  z-index: 10;
  background none
  outline: none
  border none
  background: #333333
  border-radius: 100%
  height: 35px;
  width: 35px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  opacity 0
  transition all .2s ease
  pointer-events none
  img
    width: 70%

.navbarActive
  opacity: 1
  pointer-events: auto

.animationShowcase{
  flex-direction: column;
}

