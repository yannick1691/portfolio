laptop = '(min-width: 900px) and (max-width: 1100px)'
tablet = '(min-width: 600px) and (max-width: 899px)'
mobile = '(max-width: 599px)'
smallerDesktop = '(min-width: 1101px) and (max-width: 1430px)'
desktop = '(min-width: 1101px)'


html,body
  margin: 0
  padding: 0
  background: #FBFBFB
  max-width: 100vw
  overflow-x: hidden;
  box-sizing: border-box

@media desktop
  body
    &::-webkit-scrollbar
      width: 0.4em
    &::-webkit-scrollbar-track
      box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
    &::-webkit-scrollbar-thumb
      background-color: slategray;
      outline 1px solid slategrey
      opacity: 0.5
      border-radius: 3px

h1
  font: 40px 'Roboto', sans-serif
  color: #333333
  margin: 0
  z-index: 2
  font-weight: 900
  text-transform: uppercase
  font-size: 36px
  line-height: 43px
  @media mobile
    font-size: 32px

h2, h3
  font: 30px 'Roboto', sans-serif
  color: #333333
  margin: 0
  z-index: 2
  font-weight: 400

h3
  text-transform: uppercase
  font-weight: 900;

p
  color: #333333;
  font-family: 'Open Sans', sans-serif
  font-size: 16px
  span
    color: #2196F3
    font-style: italic
    padding-right: 5px

header
  height: 75px
  width: 100%
  background-color: #212121
  display: flex
  justify-content: space-between
  align-items: center
  position: relative
  img
    height: 60px
    margin: 20px 15px
    @media mobile
      height: 35px
  a
    img
      height: 40px
      margin: 30px 25px

.line
  background: linear-gradient(319.71deg, #21D4FD 0%, #B721FF 100%);
  width: 100%
  margin: 0
  padding: 0
  height: 3px
  position: absolute
  top: 0
  left: 0

.projectinfo
  width: 45vw
  margin: 60px 5vw 60px 8vw
  max-width: 500px
  min-width: 300px
  display: inline-block
  vertical-align: top
  @media tablet
    width: 77vw
    margin: 60px 5vw
  @media mobile
    width: 90vw
    margin: 60px 5vw 60px 5vw
    min-width: 200px


.tags
  margin: 0
  padding: 0
  display: flex
  justify-content: flex-start
  flex-wrap: wrap
  width: 100%

li
  color: #2196F3
  list-style: none
  font-family: 'Open Sans', sans-serif
  padding: 5px 10px 5px 0px
  font-size: 13px
  line-height: 14px
  text-transform: capitalize

a.button
  display: block
  width: 50%
  padding: 10px 0
  text-align: center
  border: 2px solid #2196F3
  text-decoration: none
  color: #212121
  font-family: 'Roboto', sans-serif
  font-size: 15px
  font-weight: bold
  line-height: 16px
  margin: 0 auto
  text-transform: uppercase
  background: none;
  transition: all .2s ease
