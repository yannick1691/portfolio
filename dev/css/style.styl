tablet = '(min-width: 600px) and (max-width: 1100px)'
mobile = '(max-width: 599px)'
desktop = '(min-width: 1101px)'

html,body
  margin: 0
  padding: 0
  background: #FBFBFB

@media desktop
  body
    &::-webkit-scrollbar
      width: 0.4em
    &::-webkit-scrollbar-track
      box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
    &::-webkit-scrollbar-thumb
      background-color: slategray;
      outline 1px solid slategrey
      opacity: 0.5
      border-radius: 3px

h1
  font: 40px 'Roboto', sans-serif
  color: white
  margin: 0
  z-index: 2
  font-weight: 400

h2, h3
  font: 30px 'Roboto', sans-serif
  color: white
  margin: 0
  z-index: 2
  font-weight: 400

h3
  text-transform: uppercase
  font-weight: 900;

p
  color: #FFFFFF
  font-family: 'Open Sans', sans-serif
  font-size: 15px
  line-height: 19px

header
  width: 100%
  height: 600px
  max-height: 100vh
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  background-image: url('../links/img/home/hero@0,5x.jpg');
  background-size: cover
  position: relative
  @media (max-width: 800px)
    background-image: url('../links/img/home/hero@0,25x.jpg');
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    background-image: url('../links/img/home/hero@1x.jpg');
  @media (max-width: 800px) and (-webkit-min-device-pixel-ratio: 2), (max-width: 800px) and (min-resolution: 192dpi)
    background-image: url('../links/img/home/hero@0,5x.jpg');
  @media mobile
    height: 80vh
    h1
      font-size: 32px
      filter: drop-shadow(1px 1px 3px #000)
    h2
      font-size: 18px
      filter: drop-shadow(1px 1px 3px #000)
  &:before
    content: ''
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background: radial-gradient(circle, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
  .logo-bar
    width: 100%
    position: absolute
    height: 90px
    background: none
    left: 0
    top: 0
    display: flex
    justify-content: center
    align-items: center
    @media tablet
      background: radial-gradient(circle, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
    @media mobile
      background: radial-gradient(circle, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
  img
    z-index: 2
    width: 250px

nav
  width: 90%
  height: 210px
  position: relative
  transform: translateY(-50%)
  display: flex
  justify-content: space-around
  margin: 0 5%
  @media tablet
    width: 100%
    margin: 0
    height: 160px
    margin-bottom: 40px
  @media mobile
    display: none
  a
    width: 25%;
    height: 210px
    display: block
    position: relative
    box-shadow: -2px -2px 10px 0 rgba(0,0,0,0.25), 2px 2px 10px 0 rgba(0,0,0,0.25);
    overflow: hidden
    @media tablet
      height: 160px
      width: 30%
    &:before
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(26.3, 26.3, 26.3, 0.45) 100%);
    figure
      margin: 0
      position: relative;
      overflow: hidden;
      img
        position: relative;
        display: block;
        opacity: 0.8;
      figcaption
        color: #fff;
        backface-visibility: hidden;
        h3
          position: absolute
          bottom: 0px
          right: 0px
          padding: 100px 10px 5px 0px
          width: 100%
          text-align: right
          background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(26.3, 26.3, 26.3, 0.45) 100%)
          @media tablet
            font-size: 21px
    img
      object-fit: cover
      object-position: center
      height: 100%
      width: 100%
    h3
      position: absolute
      bottom: 5px
      right: 10px

article
  width: 100%
  overflow: hidden
  height: 100%
  margin-top: -100px

section
  background: radial-gradient(circle, #EBEDEE 0%, #FBFBFB 100%)
  margin: 0 -50px
  transform-origin: left center
  transform: rotate(3deg)
  h2
    color: #333333
    text-transform: uppercase
    font-weight: 900
    font-size: 33px
    text-align: center
    width: 100vw
  &:nth-child(1)
    background: #FBFBFB
  &:nth-child(even)
    background: linear-gradient(115.57deg, #45A4FA 0%, #2196F3 100%);
    h2
      color: #ffffff

.content
  transform: rotate(-3deg)
  padding-top: 80px
  padding-left: 50px
  padding-bottom: 80px

.werken
  margin-top: 25px
  a
    text-decoration: none
  .werk-thumb
    width: 25vw
    overflow: hidden
    display: inline-block
    height: 25vw
    @media tablet
      width: 33vw
      height: 33vw
    @media mobile
      width: 50vw
      height: 50vw
  figure
    width: 100%
    height: 100%
    margin: 0
    padding: 0
    transition: all ease-in-out .1s
    display: inline-block
    position: relative
    overflow: hidden
    background: #2196F3
    @media mobile
      background: none

.skills
  width: 90vw
  margin: 0 5vw
  display: flex
  justify-content: space-around
  flex-wrap: wrap

.sk
  width: 25%
  display: flex
  flex: 0 0 25%
  justify-content: flex-start
  flex-direction: column
  align-items: center
  @media tablet
    flex: 1 1 40%
    padding: 10px
    &:last-of-type
      h3
        text-align: center
        width: 100%
  @media mobile
    flex: 1 1 100%
    padding: 10px
    padding-bottom: 0px
    h3
      text-align: center
      width: 100%
  h3
    text-align: center
    font-size: 27px
    font-weight: 400
    line-height: 35px
    text-transform: none
    margin-top: 10px
    @media tablet
      font-size: 25px
      align-self: flex-start

.img
  width: 10vw
  height: 10vw
  margin: 15px 0
  @media tablet
    display: none
  @media mobile
    display: none
  svg
    margin: 20px 0
  img
    width: 100%
    height: 100%
    object-fit: contain
    object-position: center center

.aboutwrap
  width: 90vw
  margin: 0 5vw
  display: flex
  justify-content: center
  align-items: flex-start

.abme
  width: 33%
  min-width: 300px
  box-shadow: 0 0 6px 0 rgba(0,0,0,0.25)
  border-radius: 4px
  background: radial-gradient(circle, #EBEDEE 0%, #FBFBFB 100%)
  padding: 25px
  z-index: 3
  position: relative
  display: inline-block
  vertical-align: top
  margin-top: 50px
  transform: translateX(5%)
  @media tablet
    margin-top: 15px
  @media mobile
    transform: translateX(0)
    min-width: 240px
    width: 90%
    margin-top: 0
  h2
    text-align: left
  p
    color: #212121
  a
    display: block
    width: 50%
    padding: 10px 0
    text-align: center
    border: 2px solid #2196F3
    text-decoration: none
    color: #212121
    font-family: 'Roboto', sans-serif
    font-size: 15px
    font-weight: bold
    line-height: 16px
    transition: all .2s ease
    background: none
    @media mobile
      width: 100%
    &:hover
      background: #2196F3
      color: white

.imgwrap
  position: relative
  width: 33%
  height: 70vh
  min-width: 300px
  display: inline-block
  box-shadow: 1px 1px 3px 0 rgba(0,0,0,0.25)
  @media mobile
    display: none
  img
    width: 100%
    height: 100%
    object-fit: cover
    object-position: center center

.social
  width: 60vw
  margin: 30px 0px 25px 27vw
  @media tablet
    width: 90vw
    margin: 30px 0px 25px 5vw
  @media mobile
    width: 95vw
    margin: 0px 0px 0px 2.5vw

.half
  display: inline-block
  width: 49%
  @media mobile
    width: 100%
    padding: 6px
  a
    width: 100%
    display: flex
    color: #FFFFFF
    text-decoration: none
    outline: none
    border: none
    font-family: 'Open Sans', sans-serif
    font-size: 18px
    font-weight: 300
    align-items: center
    white-space: nowrap
    &:after,&:before
      transition: transform 0.3s, opacity 0.2s
      display: inline-block
      opacity: 0
    &:before
      margin-right: 10px
      content: '['
      transform: translateX(20px)
      color: #fff
      font-size: 40px
    &:after
      margin-left: 10px
      content: ']'
      transform: translateX(-20px)
      color: #fff
      font-size: 40px
    &:hover
      &:before, &:after
        opacity: 1
        transform: translateX(0px)
    &:focus
      &:before, &:after
        opacity: 1
        transform: translateX(0px)
    @media tablet
      font-size: 17px
      justify-content: center
    @media mobile
      justify-content: center
    img
      height: 40px
      margin: 5px 20px 10px
      @media tablet
        display: none
      @media mobile
        display: none

#desktop, #laptop
  visibility: hidden


figure.nav-figure {
  background: #45a4fa;
  width: 100%
  height: 100%
}

figure.nav-figure img {
  opacity: 0.95;
  transition: opacity 0.35s, transform 0.35s;
  transform: scale3d(1.05,1.05,1);
  object-fit: cover
  object-position: center
  width: 100%
  height: 100%
}

figure.nav-figure figcaption::before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.5);
  content: '';
  transition: transform 0.5s;
  transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-120%,0);
}

figure.nav-figure:hover img {
  opacity: 0.6;
  transform: scale3d(1,1,1);
}

figure.nav-figure:hover figcaption::before {
  transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,120%,0);
}

figure.werkFig img {
  opacity: 1;
  transition: opacity 0.55s, transform 0.35s;
  transform: scale3d(1.05,1.05,1);
  object-fit: cover
  object-position: center
  width: 100%
  height: 100%
}

figure.werkFig figcaption::before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.5);
  content: '';
  transition: transform 0.65s;
  transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-120%,0);
}

figure.werkFig:hover img {
  opacity: 0.6;
  transform: scale3d(1,1,1);
}

figure.werkFig:hover figcaption::before {
  transform: scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,120%,0);
}

.toTop
